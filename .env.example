# --- Granola-to-Obsidian Sync Configuration ---
# Copy this file to .env and fill in the values below.

# Path to Granola's supabase.json authentication file.
# macOS default: ~/Library/Application Support/Granola/supabase.json
GRANOLA_AUTH_PATH="~/Library/Application Support/Granola/supabase.json"

# Absolute path to the directory in your Obsidian vault where meeting notes should be saved.
OBSIDIAN_VAULT_MEETINGS_PATH="/path/to/your/Obsidian Vault/05_Meetings"


# --- Optional: Pushover Notifications for Errors ---
# If you want to receive push notifications on failure, provide both keys.
# If you leave these blank, errors will only be logged to the console.
PUSHOVER_USER_KEY=""
PUSHOVER_API_TOKEN=""

# Number of meetings to fetch from Granola API (default: 50)
GRANOLA_MEETINGS_LIMIT=50

# Owner email addresses (comma-separated) - used to identify which speaker is "Me"
OWNER_EMAILS="your@email.com,your.other@email.com"

# --- Meeting Processing Configuration ---
# Enable automatic processing of newly synced meetings with external script
# Set to 'true' to enable, 'false' to disable (default: false)
ENABLE_MEETING_PROCESSING=false

# Path to external script that handles meeting processing
# This script is called after meetings are synced to Obsidian
VAULT_OPS_SCRIPT_PATH="/path/to/your/vault-ops-script.sh"

# Include meeting transcript in Obsidian notes (default: false)
SYNC_TRANSCRIPT=false

# Only sync transcripts for meetings with these title keywords (comma-separated)
# Example: "1:1,sync,review" will sync transcripts for meetings containing these words
# Leave blank to use SYNC_TRANSCRIPT setting for all meetings
TRANSCRIPT_TITLE_FILTER=""